[delta]
    navigate = true           # Enable hyperlink navigation
    line-numbers = true       # Show line numbers
    side-by-side = true       # Side-by-side diff
    commit-style = "raw"
    file-style = "bold yellow"

[pager]
    pager = "less -RSFX"    # A pager is used for scrolling large diffs

[diff]
    colorMoved = default     # Highlight moved lines