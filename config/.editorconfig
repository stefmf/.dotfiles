# Top-most EditorConfig file
root = true

# Global settings (applies to all files)
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown files: don't trim trailing whitespace (for line breaks)
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# Makefiles: always use tabs
[Makefile]
indent_style = tab

# Python files: 4-space indent
[*.py]
indent_style = space
indent_size = 4