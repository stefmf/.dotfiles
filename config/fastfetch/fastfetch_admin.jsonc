            "text": "tailscale ip -4",
            "key": "Tailscale IP"
        },
        {
            "type": "netio",
            "key": "Network I/O"
        },
        {
            "type": "users",
            "key": "Logged-in Users",
            "compact": true
        },
        {
            "type": "shell",
            "key": "Shell"
        }
