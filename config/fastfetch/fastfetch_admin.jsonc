{
    "logo": {
        "type": "file-raw",
        "source": "-",
        "padding": {
            "left": 0,
            "right": 2
        },
        "position": "right"
    },
    "display": {
        "separator": ": ",
        "color": {
            "keys": "blue",
            "title": "cyan",
            "output": "white"
        },
        "brightColor": true,
        "disableLinewrap": true,
        "hideCursor": true
    },
    "modules": [
        {
            "type": "command",
            "shell": "/bin/bash",
            "text": "EMOJIS=('üîß' 'ü§ñ' 'üíª' 'üõ†Ô∏è' 'üöÄ' '‚ú®'); COLORS=(32 35 31); RANDOM_EMOJI=${EMOJIS[$RANDOM % ${#EMOJIS[@]}]}; RANDOM_COLOR_CODE=${COLORS[$RANDOM % ${#COLORS[@]}]}; MESSAGE=\"Welcome to your Terminal Administrator! $RANDOM_EMOJI\"; echo -e \"\\033[1;${RANDOM_COLOR_CODE}m$MESSAGE\\033[0m\"",
            "key": " "
        },
        {
            "type": "command",
            "shell": "/bin/bash",
            "text": "hostname -s",
            "key": "Host"
        },
        {
            "type": "command",
            "shell": "/bin/bash",
            "text": "date '+%A, %B %d, %Y %I:%M:%S %p'",
            "key": "Date & Time"
        },
        {
            "type": "os",
            "key": "Operating System"
        },
        {
            "type": "uptime",
            "key": "Uptime"
        },
        {
            "type": "cpu",
            "key": "Processor",
            "outputColor": "yellow"
        },
        {
            "type": "memory",
            "key": "Memory Usage"
        },
        // Separator and System Status heading
        {
            "type": "break"
        },
        {
            "type": "custom",
            "key": "System Status",
            "format": "",
            "keyColor": "green"
        },
        // Additional modules for admin
        {
            "type": "cpuusage",
            "key": "CPU Usage"
        },
        {
            "type": "swap",
            "key": "Swap Usage",
            "percent": {
                "type": 9
            }
        },
        {
            "type": "disk",
            "key": "Disk Usage",
            "percent": {
                "type": 9
            }
        },
        {
            "type": "loadavg",
