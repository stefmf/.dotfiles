#!/usr/bin/env zsh

# Source all scripts for interactive shell use

SCRIPTS_DIR="$HOME/.dotfiles/scripts"

# List of scripts that provide functions for interactive use
SCRIPTS=(
    "system/update"
    "dotfiles/dotall" 
    "shell/nuke"
    "system/setup_gnu_aliases"
)

# Source each script to make functions available
for script in "${SCRIPTS[@]}"; do
    if [[ -f "$SCRIPTS_DIR/$script" ]]; then
        source "$SCRIPTS_DIR/$script"
    fi
done

# Clean up
unset SCRIPTS_DIR SCRIPTS script
