{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "secondary_prompt": {
    "template": "❯❯ ",
    "foreground": "#a78bfa",
    "background": "transparent"
  },
  "transient_prompt": {
    "template": "❯ ",
    "background": "transparent",
    "foreground_templates": [
      "{{ if gt .Code 0 }}#ef4444{{ end }}",
      "{{ if eq .Code 0 }}#a78bfa{{ end }}"
    ]
  },
  "upgrade": {
    "source": "cdn",
    "interval": "168h",
    "auto": false,
    "notice": false
  },
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "template": "{{ if .Root }}⚡ {{ end }} {{ .UserName }}",
          "foreground_templates": [
            "{{ if .Root }}#ff5555{{ else }}#61a5fa{{ end }}"
          ],
          "background": "transparent"
        },
        {
          "type": "session",
          "style": "plain",
          "template": "<#9ca3af> ❘ </> 󰇄 {{ .HostName }} <#9ca3af> ❘ </>",
          "foreground": "#61a5fa",
          "background": "transparent"
        },
        {
          "type": "path",
          "style": "plain",
          "properties": {
            "style": "full"
          },
          "template": "  {{ .Path }}",
          "foreground": "#60a5fa",
          "background": "transparent"
        },
        {
          "type": "git",
          "style": "plain",
          "properties": {
            "branch_icon": "\uf408 \ue0a0 ",
            "commit_icon": "@",
            "fetch_status": true
          },
          "template": " {{ .HEAD }}{{ if or (.Working.Changed) (.Staging.Changed) }}*{{ end }} <#6ee7b7>{{ if gt .Behind 0 }}\u21e3{{ end }}{{ if gt .Ahead 0 }}\u21e1{{ end }}</>",
          "foreground": "#9ca3af",
          "background": "transparent"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "newline": false,
      "filler": " ",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "template": "{{ if .Env.TMUX }}\uebc8 TMUX{{ end }}",
          "foreground": "#6366f1",
          "background": "transparent"
        },
        {
          "type": "session",
          "style": "plain",
          "template": "{{ if or .Env.SSH_CONNECTION .Env.SSH_CLIENT }}\ueb3a SSH{{ end }}",
          "foreground": "#059669",
          "background": "transparent"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "❯",
          "background": "transparent",
          "type": "text",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ef4444{{ end }}",
            "{{ if eq .Code 0 }}#a78bfa{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 4,
  "final_space": true
}
