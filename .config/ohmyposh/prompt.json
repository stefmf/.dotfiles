{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "secondary_prompt": {
    "template": "❯❯ ",
    "foreground": "magenta",
    "background": "transparent"
  },
  "transient_prompt": {
    "template": "❯ ",
    "background": "transparent",
    "foreground_templates": [
      "{{ if gt .Code 0 }}red{{ end }}",
      "{{ if eq .Code 0 }}magenta{{ end }}"
    ]
  },
  "upgrade": {
    "source": "cdn",
    "interval": "168h",
    "auto": false,
    "notice": false
  },
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "style": "full"
          },
          "template": "{{ .Path }}",
          "foreground": "blue",
          "background": "transparent",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "branch_icon": "\uf408 \ue0a0 ",
            "commit_icon": "@",
            "fetch_status": true
          },
          "template": " {{ .HEAD }}{{ if or (.Working.Changed) (.Staging.Changed) }}*{{ end }} <cyan>{{ if gt .Behind 0 }}\u21e3{{ end }}{{ if gt .Ahead 0 }}\u21e1{{ end }}</>",
          "foreground": "p:grey",
          "background": "transparent",
          "type": "git",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "newline": false,
      "filler": " ",
      "segments": [
        {
          "type": "text",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#eff6ff",
          "background": "#4c7c9b",
          "template": " "
        },
        {
          "type": "session",
          "style": "powerline",
          "template": "{{ if .Env.TMUX }} TMUX \uebc8 {{ end }}",
          "foreground": "#eff6ff",
          "background": "#4c7c9b",
          "powerline_symbol": "\uE0B0"
        },
        {
          "type": "text",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#12a036",
          "background": "#000000",
          "template": " "
        },
        {
          "type": "session",
          "style": "powerline",
          "template": "{{ if or .Env.SSH_CONNECTION .Env.SSH_CLIENT }} SSH \ueb3a {{ end }}",
          "foreground": "#eff6ff",
          "background": "#12a036",
          "powerline_symbol": "\uE0B0"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "❯",
          "background": "transparent",
          "type": "text",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}red{{ end }}",
            "{{ if eq .Code 0 }}magenta{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 4,
  "final_space": true
}
